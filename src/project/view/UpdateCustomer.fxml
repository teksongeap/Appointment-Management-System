        <Label layoutX="14.0" layoutY="75.0" text="Customer Name" />
        <TextField fx:id="customerName" layoutX="14.0" layoutY="96.0" prefHeight="25.0" prefWidth="158.0" />
        <Label layoutX="14.0" layoutY="136.0" text="Address" />
        <TextField fx:id="address" layoutX="14.0" layoutY="157.0" prefHeight="25.0" prefWidth="158.0" />
        <Label layoutX="14.0" layoutY="197.0" text="Postal Code" />
        <TextField fx:id="postalCode" layoutX="14.0" layoutY="218.0" prefHeight="25.0" prefWidth="158.0" />
        <Label layoutX="14.0" layoutY="258.0" text="Phone Number" />
        <TextField fx:id="phoneNumber" layoutX="14.0" layoutY="279.0" prefHeight="25.0" prefWidth="158.0" />
        <Label layoutX="300.0" layoutY="14.0" text="Country" />
