        <Button fx:id="cancelButton" layoutX="406.0" layoutY="279.0" onAction="#cancel" text="Cancel" />
        <Label layoutX="219.0" layoutY="179.0" text="Update Cust.">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
